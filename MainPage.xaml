<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TTHK_projekt_final.MainPage">


    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#666" Offset="0.0"/>
            <GradientStop Color="#000" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout>
            
            <Image
                Source="monkey.png"
                HeightRequest="200"
                Aspect="AspectFit"/>

            <Label
                Text="Welcome to Monkey finder"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"/>

                <Button Text="Baboon"
                        Clicked="baboonButton_Clicked"
                        ImageSource="baboon.jpg"/>

                <Button Text="Capuchin Monkey"
                        Clicked="chapukinButton_Clicked"
                        ImageSource="chapukin.jpg"/>

                <Button Text="Blue Monkey"
                        ImageSource="bluemonkey.jpg"
                        Clicked="blueButton_Clicked"/>

                <Button Text="Squirrel Monkey"
                        Clicked="squirrelButton_Clicked"
                        ImageSource="squirrel.jpg"/>

                <Button Text="Golden Lion Tamarin"
                        Clicked="tamarinButton_Clicked"
                        ImageSource="tamarin.jpg"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
